<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC

   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"

   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernatecfgclass">

    <class name="Pessoa" table="pessoa">
        <id name="idGeral" column="id_geral" type="long"/>
        
        <property name="rg" column="rg" type="string" not-null="true"/>
        <property name="nome" column="nome" type="string" not-null="true"/>        
        <property name="sobreNome" column="sobrenome" type="string" not-null="false"/>
        <property name="mail" column="email" type="string" not-null="false"/>                        
    </class>

</hibernate-mapping>